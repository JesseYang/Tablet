<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:paddingBottom="0dp"
    tools:context="com.efei.student.tablet.student.ListActivity">

    <LinearLayout
        android:id="@+id/content_wrapper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/title_bar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_bar_height"
            android:orientation="horizontal"
            android:background="@color/title_bar_background">

            <View
                android:layout_width="@dimen/title_bar_space_1"
                android:layout_height="match_parent"
                android:background="@android:color/transparent" />
            
            <TextView
                android:id="@+id/my_course_tab"
                android:layout_width="@dimen/title_bar_tab_width"
                android:layout_height="40dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/tab"
                android:gravity="center"
                android:textColor="@color/title_bar_background"
                android:text="我的课程" />

            <TextView
                android:id="@+id/all_course_tab"
                android:layout_width="@dimen/title_bar_tab_width"
                android:layout_height="40dp"
                android:layout_gravity="bottom"
                android:background="@drawable/tab"
                android:text="全部课程" />

            <View
                android:layout_width="@dimen/title_bar_space_2"
                android:layout_height="match_parent"
                android:background="@android:color/transparent" />

            <LinearLayout
                android:id="@+id/title_bar_search"
                android:layout_width="@dimen/title_bar_search_width"
                android:layout_height="@dimen/title_bar_search_height"
                android:orientation="horizontal"
                android:background="@drawable/title_bar_search_background"
                android:layout_gravity="center">

                <AutoCompleteTextView
                    android:id="@+id/title_bar_search_text"
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:textColor="@color/title_bar_search_text"
                    android:hint="搜索课程"/>
<!--
                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/title_bar_search_icon"/>-->


            </LinearLayout>

            <View
                android:layout_width="@dimen/title_bar_space_3"
                android:layout_height="match_parent"
                android:background="@android:color/transparent" />
<!--
            <ImageView
                android:id="@+id/btn_filter"
                android:layout_width="@dimen/title_bar_filter_icon_width"
                android:layout_height="match_parent"
                android:src="@drawable/btn_filter"/>

            <ImageView
                android:id="@+id/btn_setting"
                android:layout_width="@dimen/title_bar_setting_icon_width"
                android:layout_height="match_parent"
                android:src="@drawable/btn_setting"/>
-->
        </LinearLayout>


        <LinearLayout
            android:id="@+id/status_bar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/status_bar_height"
            android:orientation="horizontal">

        </LinearLayout>

        <ScrollView
            android:id="@+id/course_list_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/course_list_area_height">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ListView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/lv_course_list" />

            </LinearLayout>
        </ScrollView>




    </LinearLayout>

</FrameLayout>
