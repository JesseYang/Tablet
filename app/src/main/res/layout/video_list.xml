<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="576dp"
        android:orientation="horizontal"
        android:layout_marginTop="96dp"
        android:layout_marginBottom="96dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/show_video_list"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@drawable/show_video_list"/>

        <LinearLayout
            android:id="@+id/video_list_wrapper"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp" >
                <TextView
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:background="@color/filter_yellow"
                    android:text="@string/index_list"
                    android:textColor="@color/white"
                    android:gravity="center"/>
                <ImageView
                    android:id="@+id/hide_video_list"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:background="#FF0000"/>
            </LinearLayout>

            <ListView
                android:layout_width="250dp"
                android:layout_height="526dp"
                android:id="@+id/lv_video_list"
                android:background="@color/transparent"
                android:divider="@color/transparent"/>
        </LinearLayout>



    </LinearLayout>

</LinearLayout>