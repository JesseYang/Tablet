<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lesson_item_layout"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_gravity="center">

    <TextView
        android:layout_width="0dp"
        android:layout_weight="120"
        android:layout_height="wrap_content"
        android:id="@+id/lesson_number"
        android:layout_gravity="center"
        android:gravity="center"/>

    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="0dp"
        android:layout_weight="200"
        android:layout_height="wrap_content"
        android:minHeight="?android:attr/listPreferredItemHeight"
        android:gravity="center_vertical"
        android:id="@+id/tv_course_lesson"
        android:enabled="true">
    </TextView>

    <FrameLayout
        android:layout_width="0dp"
        android:layout_weight="100"
        android:layout_height="match_parent">
        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/tv_course_lesson_study_status"
            android:background="@drawable/exercise_finished_background"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="@color/white"
            android:text="@string/temp4">
        </TextView>
    </FrameLayout>


    <FrameLayout
        android:layout_width="0dp"
        android:layout_weight="100"
        android:layout_height="match_parent">

        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:gravity="center"
            android:id="@+id/tv_course_lesson_exercise_status"
            android:background="@drawable/exercise_ongoing_background"
            android:layout_gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="@color/white"
            android:text="@string/temp5">
        </TextView>
    </FrameLayout>




</LinearLayout>