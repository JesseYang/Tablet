<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:id="@+id/rootLayout"
    android:orientation="vertical"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.efei.student.tablet.account.LoginActivity"
    android:background="@color/account_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="550"
        android:orientation="horizontal"
        android:layout_height="0dp">

        <ImageView
            android:layout_width="221dp"
            android:layout_height="212dp"
            android:layout_gravity="center"
            android:layout_marginLeft="130dp"
            android:layout_marginRight="50dp"
            android:src="@drawable/logo" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:orientation="horizontal"
                android:background="@drawable/input_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="140dp">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_account"/>

                <EditText
                    android:id="@+id/account"
                    android:layout_width="0dp"
                    android:layout_weight="15"
                    android:layout_height="35dp"
                    android:hint="@string/login_account_hint"
                    android:cursorVisible="false"
                    android:background="@color/transparent"
                    android:text="13222221111" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:background="@drawable/input_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="45dp">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_password"/>

                <EditText android:id="@+id/password"
                    android:layout_width="0dp"
                    android:layout_weight="15"
                    android:layout_height="35dp"
                    android:hint="@string/login_password_hint"
                    android:inputType="textPassword"
                    android:cursorVisible="false"
                    android:background="@color/transparent"
                    android:text="111111" />

            </LinearLayout>

            <Button
                android:id="@+id/sign_in_button"
                style="?android:textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="45dp"
                android:text="@string/action_sign_in"
                android:textColor="@android:color/white"
                android:background="@drawable/account_button_background"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_go_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="@string/action_go_register"
                android:textColor="#ff87adee"
                android:textSize="13dp"
                android:visibility="invisible"/>


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_weight="218"
        android:layout_height="0dp">


        <TextView android:text="@string/follow_weixin"
            android:layout_width="wrap_content"
            android:textColor="@color/logo_color"
            android:layout_marginLeft="280dp"
            android:layout_marginRight="20dp"
            android:textSize="20dp"
            android:gravity="center_vertical"
            android:layout_gravity="right"
            android:layout_height="match_parent" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/qrcode"
            android:layout_gravity="center_vertical" />

    </LinearLayout>


</LinearLayout>
