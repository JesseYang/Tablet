<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/exercise_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@color/title_bar_background"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginBottom="20dp">
        <TextView
            android:id="@+id/exercise_top_tv"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请在讲义上完成例题，并如实提交答案"
            android:textSize="20dp"
            android:textColor="@color/white"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/exercise"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/content_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:background="@color/white">
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/blank_answer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="20dp">
                <LinearLayout
                    android:orientation="horizontal"
                    android:id="@+id/blank_answer_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="30dp">

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/blank_animation"
                    android:orientation="horizontal"
                    android:layout_width="2048dp"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:id="@+id/blank_yes_no"
                        android:layout_width="1024dp"
                        android:layout_height="wrap_content"
                        android:minHeight="60dp">
                        <ImageView
                            android:id="@+id/blank_finish"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/ic_ok"/>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:id="@+id/blank_yes_content"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        </LinearLayout>
                        <ImageView
                            android:id="@+id/blank_abadon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="30dp"
                            android:background="@drawable/ic_unok"/>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:id="@+id/blank_no_content"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:id="@+id/blank_right_wrong"
                        android:layout_width="1024dp"
                        android:layout_height="wrap_content"
                        android:minHeight="60dp">
                        <ImageView
                            android:id="@+id/blank_right"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/ic_ok"/>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:id="@+id/blank_right_content"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        </LinearLayout>
                        <ImageView
                            android:id="@+id/blank_wrong"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="30dp"
                            android:background="@drawable/ic_unok"/>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:id="@+id/blank_wrong_content"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/items_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="50dp"
                android:background="@color/white">
                <LinearLayout
                    android:id="@+id/item_A"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="60dp"
                    android:gravity="center_vertical">
                    <ImageView
                        android:id="@+id/itemImage_A"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/ic_a"/>
                    <LinearLayout
                        android:id="@+id/itemContent_A"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/item_B"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="60dp"
                    android:gravity="center_vertical">
                    <ImageView
                        android:id="@+id/itemImage_B"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/ic_b"/>
                    <LinearLayout
                        android:id="@+id/itemContent_B"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/item_C"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="60dp"
                    android:gravity="center_vertical">
                    <ImageView
                        android:id="@+id/itemImage_C"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/ic_c"/>
                    <LinearLayout
                        android:id="@+id/itemContent_C"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/item_D"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="60dp"
                    android:gravity="center_vertical">
                    <ImageView
                        android:id="@+id/itemImage_D"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/ic_d"/>
                    <LinearLayout
                        android:id="@+id/itemContent_D"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/item_E"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="60dp"
                    android:gravity="center_vertical">
                    <ImageView
                        android:id="@+id/itemImage_E"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/ic_e"/>
                    <LinearLayout
                        android:id="@+id/itemContent_E"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


        <RelativeLayout
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:gravity="center_vertical"
            android:background="@color/title_bar_background">
            <TextView
                android:id="@+id/question_time_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:text="@string/question_time_tip"/>
            <Button
                android:id="@+id/next_button"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:padding="10dp"
                android:textSize="20dp"
                android:layout_alignParentRight="true"
                android:textColor="@color/white"
                android:text="下一题"/>
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/pre_test_summary"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/pre_test_summary_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="50dp"/>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/pre_test_summary_stat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginBottom="30dp">
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:text="课程中会有详细解答，赶紧正式进入今天的课程吧！"
                android:textSize="20dp"
                android:textColor="@color/black"/>
            <Button
                android:id="@+id/begin_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:textColor="@color/title_bar_background"
                android:textSize="20dp"
                android:text="点击开始！"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/post_test_summary"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/post_test_summary_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="50dp"/>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/post_test_summary_stat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginBottom="50dp">
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:text="点击上面的题目编号，查看详细讲解！"
                android:textSize="20dp"
                android:textColor="@color/black"/>
            <Button
                android:id="@+id/over_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:textColor="@color/title_bar_background"
                android:textSize="20dp"
                android:text="完成！"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>